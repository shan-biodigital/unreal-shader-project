// SimplePulsingColor.ush

// This function takes time and two colors, and returns a
// new color that interpolates between them based on a sine wave.
float4 PulseColor(float Time, float4 ColorA, float4 ColorB)
{
    // Use a sine wave to create a smooth, pulsing effect.
    float Pulse = sin(Time * 2.0) * 0.5 + 0.5;

    // Linearly interpolate between ColorA and ColorB using the pulse value.
    return lerp(ColorA, ColorB, Pulse);
}
